@{
    ViewData["Title"] = "Chi tiết Tồn kho";
}
<div class="card">
    <div class="card-header">
        <h3>Chi tiết Tồn kho</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row" style="margin-bottom:20px;">
                <div class="col-sm-3 col-md-3"">
                    <select id="warehouseSelect" name="warehouseSelect" class="form-control" style="margin-right: 10px;">
                        <option value="0">-- Chọn kho --</option>
                        @foreach(var warehouse in ViewBag.WarehouseList)
                        {
                            <option value="@warehouse.Id">@warehouse.Name</option>
                        }
                    </select>
                </div>
                <div class="col-sm-2 col-md-2">
                    <a class="btn btn-primary" onclick="ChooseWarehouse()"> Chọn kho</a>
                </div>
            </div>
            <table id="truckTable" class="table table-striped table-bDetailed" style="width:100%">
                <thead>
                    <tr>
                        <th>Bay</th>
                        <th>Row</th>
                        <th>Tier</th>
                        <th>PO</th>
                        <th>Item</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "GetDeliveryDetailByOrder?orderid=" + @ViewBag.OrderId,
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "bay" },
                    { "data": "row" },
                    { "data": "tier" },
                    { "data": "po" },
                    { "data": "item" },
                    { "data": "quantity" },
                ]
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
            .done(function (response) {
                formDiv.html(response);
                Popup = formDiv.dialog({
                    autoOpen: true,
                    resizeable: false,
                    title: 'Nhập thông tin PO',
                    height: 470,
                    width: 600,
                    close: function () {
                        Popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                    else {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        })
                    }
                }
            });
            return false;
        }

        function Delete(id) {
            if (confirm("Bạn có muốn xóa PO này không?")) {
                $.ajax({
                    type: "GET",
                    url: 'Delete?id=' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
        }

        function CreateTallyJob() {

        }
    </script>
}
