@{
    ViewData["Title"] = "Chi tiết Pallet";
}
<div class="card">
    <div class="card-header">
        <h3>Chi tiết Pallet</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <a class="btn btn-success" style="margin-bottom:10px;" onclick="PopupForm('PalletDetail/AddOrEdit')"><i class="fa fa-plus"></i> Thêm mới</a>
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>PO</th>
                        <th>Item</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "GetDetailByPallet?palletId=" + @ViewBag.PalletId,
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "po" },
                    { "data": "item" },
                    { "data": "quantity" }
                ]
            });
        });
    </script>
}