@model WarehouseManager.BackendServer.Data.Entities.DeliveryDetail
@{
    Layout = null;
}
<form action="AddOrEdit" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DeliveryOrderId)
    <div class="form-group">
        <label class="control-label">Số seal</label>
        @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">GW</label>
        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">CBM</label>
        @Html.EditorFor(model => model.CBM, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
