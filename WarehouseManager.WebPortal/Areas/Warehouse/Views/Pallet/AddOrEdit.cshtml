@{
    Layout = null;
}
<form action="Pallet/AddNumber" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label">Số phiếu</label>
        <input type="number" id="palletNo" name="palletNo" class="form-control" placeholder="Enter your Pallet No" min="0" step="1">
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
