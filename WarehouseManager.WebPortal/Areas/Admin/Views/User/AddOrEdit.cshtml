@model WarehouseManager.BackendServer.Data.Entities.User

@{
    Layout = null;
}

<form action="User/AddOrEdit" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên người dùng</label>
        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tài khoản</label>
        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Chức danh</label>
        @Html.DropDownListFor(model => model.RoleId, new SelectList(ViewBag.RoleList, "Id", "Name"), "--Chọn Chức danh--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <label class="control-label">Đơn vị</label>
        @Html.DropDownListFor(model => model.DepartmentId, new SelectList(ViewBag.DepartmentList, "Id", "Name"), "--Chọn Đơn vị--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
