@model WarehouseManager.BackendServer.Data.Entities.ReceiptOrder
@{
    Layout = null;
}
<form action="ReceiptOrder/AddOrEdit" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Số phiếu</label>
        @Html.EditorFor(model => model.OrderNo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
    <div class="form-group">
        <label class="control-label">Đại lý</label>
        @Html.DropDownListFor(model => model.AgentId, new SelectList(ViewBag.AgentList, "Id", "Name"), "--Chọn Đại lý--", new { @class = "form-control" } )
    </div>
        <div class="form-group">
        <label class="control-label">Khách hàng</label>
        @Html.DropDownListFor(model => model.CustomerId, new SelectList(ViewBag.CustomerList, "Id", "Name"), "--Chọn Khách hàng--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <label class="control-label">Số xe</label>
        @Html.EditorFor(model => model.TruckNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số container</label>
        @Html.EditorFor(model => model.CntrNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số seal</label>
        @Html.EditorFor(model => model.SealNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Booking</label>
        @Html.EditorFor(model => model.Booking, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Loại hàng</label>
        @Html.EditorFor(model => model.Commodity, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số tờ khai HQ</label>
        @Html.EditorFor(model => model.CustomDeclareNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Khối lượng</label>
        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
        <div class="form-group">
        <label class="control-label">CBM</label>
        @Html.EditorFor(model => model.CBM, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
