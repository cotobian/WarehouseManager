@model WarehouseManager.BackendServer.Data.Entities.WarehouseDoor
@{
    Layout = null;
}
<form action="WarehouseDoor/AddOrEdit" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên Cửa kho</label>
        @Html.EditorFor(model => model.DoorNo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tên kho</label>
        @Html.DropDownListFor(model => model.WarehouseId, new SelectList(ViewBag.WarehouseList, "Id", "Name"), "--Chọn Kho--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
