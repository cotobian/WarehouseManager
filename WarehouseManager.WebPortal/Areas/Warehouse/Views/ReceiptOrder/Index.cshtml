@{
    ViewData["Title"] = "Danh sách Lệnh nhập";
}
<div class="card">
    <div class="card-header">
        <h3>Danh sách Lệnh nhập</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <a class="btn btn-success" style="margin-bottom:10px;" onclick="PopupForm('ReceiptOrder/AddOrEdit')"><i class="fa fa-plus"></i> Thêm mới</a>
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Số lệnh</th>
                        <th>Đại lý</th>
                        <th>Khách hàng</th>
                        <th>Số xe</th>
                        <th>Số cont</th>
                        <th>Số chì</th>
                        <th>Booking</th>
                        <th>Khối lượng</th>
                        <th>CBM</th>
                        <th>Loại hàng</th>
                        <th>Số tờ khai HQ</th>
                        <th>Chi tiết</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "ReceiptOrder/GetAllReceiptOrder",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "orderNo" },
                    { "data": "agentName" },
                    { "data": "customerName" },
                    { "data": "truckNo" },
                    { "data": "cntrNo" },
                    { "data": "sealNo" },
                    { "data": "booking" },
                    { "data": "weight" },
                    { "data": "cbm" },
                    { "data": "commodity" },
                    { "data": "customDeclareNo" },
                    {
                        "data": "id", "render": function (data) {
                            return "<i class='fa fa-info-circle f-18 text-primary' onclick=Detail('" + data + "')><i/>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "id", "render": function (data) {
                            return "<i class='fa fa-pencil-alt f-18 text-success' onclick=PopupForm('ReceiptOrder/AddOrEdit?id=" + data + "')><i/>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizeable: false,
                        title: 'Nhập thông tin lệnh',
                        height: 470,
                        width: 600,
                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function SubmitForm(form) {
            $.ajax({
                type: "POST",
                url: form.action,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        Popup.dialog('close');
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "success"
                        })
                    }
                    else {
                        dataTable.ajax.reload();
                        $.notify(data.message, {
                            globalPosition: "top center",
                            className: "error"
                        })
                    }
                }
            });
            return false;
        }

        function Detail(id) {
            window.location.href = "ReceiptDetail/Index?oderid=" + id;
        }

        function Delete(id) {
            if (confirm("Bạn có muốn xóa lệnh này không?")) {
                $.ajax({
                    type: "GET",
                    url: 'ReceiptOrder/Delete?id=' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
        }
    </script>
}