@model WarehouseManager.ViewModels.Warehouse.DeliveryDetail.GetDeliveryDetailVm
@{
    Layout = null;
}
<form action="AddOrEdit" method="post" onsubmit="return SubmitForm(this)">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <input type="hidden" name="DeliveryOrderId" id="DeliveryOrderId" for="DeliveryOrderId" value=@ViewBag.OrderId />
    <div class="form-group">
        <label class="control-label">PO</label>
        @Html.DropDownListFor(model => model.PO, new SelectList(ViewBag.POList), "--Chọn PO--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <label class="control-label">Item</label>
        @Html.DropDownListFor(model => model.Item, new SelectList(ViewBag.ItemList), "--Chọn Item--", new { @class = "form-control" } )
    </div>
    <div class="form-group">
        <label class="control-label">Số lượng</label>
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <label class="control-label">Kích thước</label>
        @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Trọng lượng</label>
        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">CBM</label>
        @Html.EditorFor(model => model.CBM, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-warning" />
    </div>
</form>
