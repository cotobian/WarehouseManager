@{
    ViewData["Title"] = "Danh sách Job giao nhận";
}
<div class="card">
    <div class="card-header">
        <h3>Danh sách Job giao nhận</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Pallet</th>
                        <th>Vị trí</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Người tạo</th>
                        <th>Ngày hoàn tất</th>
                        <th>Người hoàn tất</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "TallyJob/GetAllTallyJob",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "palletNo" },
                    { "data": "positionName" },
                    { "data": "jobStatusText" },
                    { "data": "createdDateText" },
                    { "data": "createdUserName" },
                    { "data": "completedDateText" },
                    { "data": "completedUserName" },
                    {
                        "data": "id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
        });

        function Delete(id) {
            if (confirm("Bạn có muốn xóa job này không?")) {
                $.ajax({
                    type: "GET",
                    url: 'TallyJob/Delete?id=' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                        else {
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "error"
                            })
                        }
                    }
                });
            }
        }
    </script>
}